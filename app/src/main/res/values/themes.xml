<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar" >
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@android:color/black</item>
        <item name="colorCardBackground">@color/card_light_background</item>
        <item name="colorUnusedBackground">@color/unused_light_background</item>
        <item name="colorDrawableTint">@color/drawable_color_light</item>
        <item name="colorFloatingToolbar">@color/floating_toolbar_light</item>
        <item name="md_title_color">@android:color/black</item>
        <item name="md_content_color">@android:color/black</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

